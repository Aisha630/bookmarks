{
	"extends": "./.wxt/tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "."
	},
	"include": ["src"],
	"exclude": ["node_modules", ".wxt", ".output"]
}
